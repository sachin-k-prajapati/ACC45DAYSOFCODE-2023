#include <stdio.h>

int main() {
  int r;
  printf("Enter the Number of ROWS: ");
  scanf("%d", &r);
  
  // Printing the Mirrored Right-Angled Triangle Pattern
  for (int i = 1; i <= r; i++) {
    for (int j = r-i; j >= 1; j--) {
      printf("  ");
    }
    for (int k=1; k<=i; k++) {
      printf(" *");
    }
    printf("\n");
  }
  return 0;
}
