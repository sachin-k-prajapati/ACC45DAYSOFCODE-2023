#include <stdio.h>

int main() {
  int r;
  printf("Enter the Number of ROWS: ");
  scanf("%d", &r);
  
  // Printing the top half of the pyramid
  for (int i = 1; i <= r; i++) {
    for (int j = 1; j <= i; j++) {
      printf("*  ");
    }
    printf("\n");
  }

  // Printing the bottom half of the pyramid
  for (int i = r - 1; i >= 1; i--) {
    for (int j = 1; j <= i; j++) {
      printf("*  ");
    }
    printf("\n");
  }
  
  return 0;
}
