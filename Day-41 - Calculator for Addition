#include <stdio.h>
int main(){
  int a, sum;
  sum = 0;
  printf("\n ** PRESS '0(zero)' To get the Summation of the Numbers **\n\n");
  while (a != 0) {
    printf( "Enter the Numbers for Sum: ");
    scanf("%d", &a);
    sum = sum + a;
  }
  printf(" The sum of the numbers is : %d\n THANK YOU !!", sum);
  return 0;
}
